
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h1>Make a reservation</h1>
    <%= form_for [@listings, @reservation] do |f| %>
   

      <%= f.label :checkin %>
      <%= f.date_field :checkin, class: 'form-control' %>
      <br>
    	<%= f.label :nights, "Number of nights" %>
      <%= f.number_field :nights, class: 'form-control' %>
      <br>
    
      <%= f.submit "Book", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>